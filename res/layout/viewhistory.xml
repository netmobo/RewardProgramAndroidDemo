<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
		android:id="@+id/LinearLayout01"
		android:orientation="vertical"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:padding="5dp">
		
	<LinearLayout android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:orientation="horizontal">
							
		<TextView android:text="@string/history_textview_username"
				android:paddingRight="5dip"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"/>
				
		<TextView android:id="@+id/history_textview_username" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"/>
	</LinearLayout>
	
	<LinearLayout android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:orientation="horizontal">
			
		<TextView android:text="@string/history_textview_points" 
				android:paddingRight="5dip"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"/>
				
		<TextView android:id="@+id/history_textview_points" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"/>
	</LinearLayout>
	
	<LinearLayout android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:orientation="horizontal"
			android:paddingTop="20dip">
			
		<TextView android:text="@string/history_textview_history" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"/>
	</LinearLayout>

	<LinearLayout android:paddingTop="10dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
	 
		<TextView android:text="@string/history_textview_headerdate"
				android:paddingLeft="5dip"
				android:layout_width="100dip"
				android:layout_height="wrap_content"/>
	 
		<TextView android:text="@string/history_textview_headeritem"
				android:paddingLeft="5dip"
				android:layout_width="150dip"
				android:layout_height="wrap_content"  
				android:layout_weight="1"/>
			
		<TextView android:text="@string/history_textview_headercost"
				android:paddingLeft="5dip"
				android:layout_width="50dip"
				android:layout_height="wrap_content"/>
	</LinearLayout>
	
	<ListView android:id="@+id/history_listview"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
	</ListView>
</LinearLayout>